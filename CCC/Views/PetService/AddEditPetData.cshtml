                <div class="userBoxFooter">
                    <div class="pull-right">
                        <button type="button" class="btn btn-primary btnSearch" id="btnSubmit">Submit</button>
                        <button type="button" class="btn btn-primary btnSearch" id="btnCancel">Cancel</button>
                    </div>
                </div>
                <div class="bottomSpace">&nbsp;</div>
            </div>
        </div>
    </div>
</form>

<script>
    $("#btnSubmit").on('click', function (e) {
        e.preventDefault();

        $('#AddEditPetData').find('input:text').each(function () {
            $(this).val($.trim($(this).val()));
        });

        if ($('#AddEditPetData').valid()) {

            var formAction = $('#AddEditPetData').attr("action");
            var fdata = new FormData();
            var params = $('#AddEditPetData').serializeArray();
            $.each(params, function (i, val) {
                fdata.append(val.name, val.value);
            });

            $.ajax({
                type: 'post',
                url: formAction,
                data: fdata,
                processData: false,
                contentType: false
            }).done(function (result) {
                debugger;
                if (result.isSuccess == true) {
                    showSuccessMsg('Success');

                } else {
                    showWarningMsg('something went wrong ');
                }
            });
        }
    });

    function BackToManage() {
        var url = '@Url.Action("ManagePetService", "PetService")';
        document.location.href = url;
    }

</script>

