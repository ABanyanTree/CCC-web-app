@using CCC.UI.ViewModels
@model SearchPetData
@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
    SelectList lstCenter = ViewBag.lstCenter;
}

<style>
    table {
        text-align: left;
        position: relative;
        border-collapse: collapse;
    }

    th, td {
        padding: 0.25rem;
    }

    th {
        background: white;
        position: sticky;
        top: 0; /* Don't forget this, required for the stickiness */
        box-shadow: 0 2px 2px -1px rgba(0, 0, 0, 0.4);
    }
</style>

<script>
    $(document).ready(function () {
        var count =@Model.TotalCount;
        if (count > 0) {
            $("#spPetDataCart").text(count);
            $("#spPetDataCart").addClass('badge badge-counter');
        }
    });
</script>

<div class="mainContent">
    <div class="conHeader">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="pull-left">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item active" aria-current="page">Pet Summery(Today)</li>
                    </ol>
                </div>
                <div class="filterMenuIcon"></div>
            </div>
        </div>
    </div>
    <br />
    <div class="conInner">
        <div class="chkTBL">
            <div class="bulkImpLogHT mngEventpage mobileTablenowrap">
                <table id="mydatatable" class="table">
                    <thead>
                        <tr>
                            <th>Center</th>
                            <th>Total Admission</th>
                            <th>Total Pet Surgery</th>
                            <th>Total Pet Release</th>
                            <th>Total Pet Expired</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.PetCountDetails.Count > 0)
                        {
                            foreach (var item in lstCenter)
                            {
                                int admissionCount = Model.PetCountDetails.Where(x => Convert.ToDateTime(x.AdmissionDate.Date) == DateTime.Now.Date && x.CenterId == item.Value).ToList().Count;
                                int surgeryCount = Model.PetCountDetails.Where(x => Convert.ToDateTime(x.SurgeryDate.Value.Date) == DateTime.Now.Date && x.CenterId == item.Value).ToList().Count;
                                int releaseCount = Model.PetCountDetails.Where(x => Convert.ToDateTime(x.ReleaseDate.Value.Date) == DateTime.Now.Date && x.CenterId == item.Value).ToList().Count;
                                int expiredCount = Model.PetCountDetails.Where(x => Convert.ToDateTime(x.ExpiredDate.Value.Date) == DateTime.Now.Date && x.CenterId == item.Value).ToList().Count;

                                <tr>
                                    <td>@item.Text</td>
                                    <td>@admissionCount</td>
                                    <td>@surgeryCount</td>
                                    <td>@releaseCount</td>
                                    <td>@expiredCount</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>





