<script type="text/javascript">
    function AddEditDialog(_url, _title) {
        $.dialog({
            title: _title,
            content: 'url:' + _url,
            columnClass: 'col-md-8 col-md-offset-2',
            alignMiddle: true,
            onClose: function () {

            }
        });
    }

    function DeleteEvent(VanId) {
                    $.confirm({
                title: 'Confirm',
                content: "Are you sure want to delete this Van?",
                buttons: {
                    confirm: function () {

                        $.ajax({
                            url: "@Url.Content("~/VanMaster/IsInUseCount")",
                            type: "POST",
                            dataType: "json",
                            data: { VanId: VanId },
                            success: function (result) {
                                if (result.isSuccess == true && parseInt(result.Count) > 0) {
                                    showWarningMsg('Van does not delete, This Van associated with the other data.');
                                }
                                else if (result.isSuccess == true && parseInt(result.Count) == 0) {
                                         $.ajax({
                                             url: "@Url.Content("~/VanMaster/DeleteVan")",
                                             type: "Delete",
                                             dataType: "json",
                                             data: { VanId: VanId },
                                             success: function (result) {

                                                 if (result.isSuccess == true) {
                                                     showSuccessMsg('Van deleted successfully.', BackToManage);
                                                }
                                                else {
                                                showWarningMsg('something went wrong');
                                                }
                                            }
                                        });
                                    }
                                    else {
                                    showWarningMsg('something went wrong');
                                    }
                            }
                        });

                    },
                    cancel: function () {

                    }
                }
            });
    }
    function BackToManage() {
        var url = '@Url.Action("ManageVan", "VanMaster")';
        document.location.href = url;
    }
</script>
